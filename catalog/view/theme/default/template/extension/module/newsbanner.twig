{% if modules_news %}
<div id="owl-example3{{ modul }}" class="owl-carousel newsbanner">
{% for module_news in modules_news %}
	  <div class="item text-center">
			<div class="col-sm-12"><a {% if module_news.information_id %}href="index.php?route=information/information&information_id={{ module_news.information_id }}"{% endif %}><span class="image col-sm-12"><img src="/image/{{ module_news.news_image }}" alt="" title="" class="grayscale img-responsive" /></span></a></div>
			<div class="descrip">{{ module_news.news_text }}</div>
	  </div>
  {% endfor %}
</div>
<script>
$(document).ready(function() {
	$('#owl-example3{{ modul }}').wrap('<div class="container"><div class="row"></div></div>');
	cols = $('#column-right, #column-left').length;
	if (cols == 2) {
		$("#owl-example3{{ modul }}").owlCarousel({
			navigation : true,
			pagination : false,
			slideSpeed : 200,
			paginationSpeed : 400,
			navigationText: ['<i class="fa fa-chevron-left fa-5x"></i>','<i class="fa fa-chevron-right fa-5x"></i>'],
			items : 2,
			itemsDesktop : [1400, 1],
			itemsDesktopSmall : [979, 1],
			itemsTablet : [768, 2],
			itemsTabletSmall : [590, 1],
			itemsMobile : [479, 1]
		});
	} else if (cols == 1) {
		$("#owl-example3{{ modul }}").owlCarousel({
			navigation : true,
			pagination : false,
			slideSpeed : 200,
			paginationSpeed : 400,
			navigationText: ['<i class="fa fa-chevron-left fa-5x"></i>','<i class="fa fa-chevron-right fa-5x"></i>'],
			items : 3,
			itemsDesktop : [1400, 2],
			itemsDesktopSmall : [997, 1],
			itemsTablet : [767, 2],
			itemsTabletSmall : [590, 1],
			itemsMobile : [479, 1]
		});
	} else {
		$("#owl-example3{{ modul }}").owlCarousel({
			navigation : true,
			pagination : false,
			slideSpeed : 200,
			paginationSpeed : 400,
			navigationText: ['<i class="fa fa-chevron-left fa-5x"></i>','<i class="fa fa-chevron-right fa-5x"></i>'],
			items : 4,
			itemsDesktop : [1400, 3],
			itemsDesktopSmall : [1014, 2],
			itemsTablet : [767, 2],
			itemsTabletSmall : [590, 1],
			itemsMobile : [479, 1]
		});
	}
	
	$('#owl-example3{{ modul }} .owl-item').addClass('col-sm-12 dynamic-shadow big');
});
</script>
{% endif %}